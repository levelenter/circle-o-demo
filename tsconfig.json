{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
//    "noImplicitThis": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "app",
    "paths": {
      "~/*": [ "./*" ],
      "@/*": [ "./*" ],
      "~~/*": [ "../*" ],
      "@@/*": [ "../*" ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "bootstrap-vue/src"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
